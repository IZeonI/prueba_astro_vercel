---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Register">
  <div class="container-forms">
    <form action="/api/auth/register" method="post" class="forms">
      <h2 class="text-2xl font-bold">Registrarse</h2>
      <div class="forms-info">
        <h4 class="font-bold">Nombre de usuario</h4>

        <div class="login-inputs">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            width="24"
            height="24"
          >
            <path d="M12 2a5 5 0 1 1 -5 5l.005 -.217a5 5 0 0 1 4.995 -4.783z"
            ></path>
            <path
              d="M14 14a5 5 0 0 1 5 5v1a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-1a5 5 0 0 1 5 -5h4z"
            ></path>
          </svg>
          <input
            id="nickname"
            name="nickname"
            type="text"
            placeholder="Nombre de usuario"
            required
          />
        </div>

        <h4>Correo electrónico</h4>

        <div class="login-inputs">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            width="24"
            height="24"
            stroke-width="2"
          >
            <path d="M12 12m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"></path>
            <path d="M16 12v1.5a2.5 2.5 0 0 0 5 0v-1.5a9 9 0 1 0 -5.5 8.28"
            ></path>
          </svg>
          <input
            id="email"
            name="email"
            type="email"
            placeholder="Correo electrónico"
            required
          />
        </div>

        <h4>Contraseña</h4>

        <div class="login-inputs">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            width="24"
            height="24"
          >
            <path
              d="M12 2a5 5 0 0 1 5 5v3a3 3 0 0 1 3 3v6a3 3 0 0 1 -3 3h-10a3 3 0 0 1 -3 -3v-6a3 3 0 0 1 3 -3v-3a5 5 0 0 1 5 -5m0 12a2 2 0 0 0 -1.995 1.85l-.005 .15a2 2 0 1 0 2 -2m0 -10a3 3 0 0 0 -3 3v3h6v-3a3 3 0 0 0 -3 -3"
            ></path>
          </svg>
          <input
            id="password"
            type="password"
            name="password"
            placeholder="Contraseña"
            required
          />
        </div>

        <h4>Confirmar contraseña</h4>

        <div class="login-inputs">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            width="24"
            height="24"
          >
            <path
              d="M12 2a5 5 0 0 1 5 5v3a3 3 0 0 1 3 3v6a3 3 0 0 1 -3 3h-10a3 3 0 0 1 -3 -3v-6a3 3 0 0 1 3 -3v-3a5 5 0 0 1 5 -5m0 12a2 2 0 0 0 -1.995 1.85l-.005 .15a2 2 0 1 0 2 -2m0 -10a3 3 0 0 0 -3 3v3h6v-3a3 3 0 0 0 -3 -3"
            ></path>
          </svg>
          <input
            id="confirmpassword"
            type="password"
            name="confirmpassword"
            placeholder="Confirmar contraseña"
            required
          />
        </div>
      </div>

      <button type="submit" id="btn-register">Registrarse</button>
      <p id="register-error" class="error"></p>
    </form>
    <div class="container-img">
      <div class="container-filter">
          <img src="/logo_no_bg.png" alt="" />
          <h1 class="font-bold text-4xl font-[Emblema_One]">Hypershop</h1>
          <h2 class="font-bold text-2xl">Bienvenido</h2>
          <p class="font-bold text-xl">Ya tienes cuenta?</p>
          <button id="signIn" onclick="window.location.href='/signin'">Iniciar sesión</button>
      </div>
    </div>
  </div>
</Layout>

<style>
  .container-img img {
    width: 320px;
    height: 180px;
  }

  .container-forms {
    margin: 2rem auto;
    width: 70%;
    height: 80vh;
    background-color: var(--second-color);
    border-radius: 10px;
    display: flex;
    box-shadow:
      rgba(0, 0, 0, 0.25) 0px 54px 55px,
      rgba(0, 0, 0, 0.12) 0px -12px 30px,
      rgba(0, 0, 0, 0.12) 0px 4px 6px,
      rgba(0, 0, 0, 0.17) 0px 12px 13px,
      rgba(0, 0, 0, 0.09) 0px -3px 5px;
  }

  .container-img {
    width: 50%;
    height: 100%;
    background-image: url(../assets/login/register-image.jpg);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    border-radius: 10px;
  }

  .container-filter {
    color: white;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.3),
      rgba(0, 0, 0, 0.7),
      rgba(0, 0, 0, 0.9)
    );
    gap: 1rem;
    border-radius: 10px;
  }

  .forms {
    width: 50%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 1rem;
  }

  .login-inputs {
    height: 2.5rem;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
    padding: 0 0.1rem;
    gap: 0.5rem;
  }

  .login-inputs:focus-within{
    outline: 2px solid var(--main-accent);
  }

  .forms input {
    width: 100%;
    height: 100%;
    background-color: inherit;
    outline: none;
    border: none;
    font-size: 1.1rem;
  }

  .forms-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .container-forms button {
    height: 3rem;
    width: 15rem;
    border-radius: 10px;
    cursor: pointer;
    border: none;
    background-color: var(--main-accent);
    color: white;
  }
</style>
