---

export interface Props {
  name: string;
  img: string;
}

const {name, img} = Astro.props;
---

<a href={`/category/mainCategory/${name}`} class="category">
  <img src={img} alt={name} />
  <h4>{name}</h4>
</a>

<style>
  .category {
    height: 16rem;
    width: 10rem;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    border-radius: 10px;
    box-shadow: rgba(0, 0, 0, 0.22) 0px 10px 10px;
    background-color: var(--second-color);
    cursor: pointer;
  }

  .category:hover {
    transform: scale(0.9);
    transition: transform 0.3s ease-in-out;
  }

  .category img {
    width: 80%;
    height: 80%;
    object-fit: contain;
  }
</style>
